<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PruebaEmpleados</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
	@RenderSection("Styles", required: false)
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PruebaEmpleados</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<partial name="_LoginPartial" />
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link mt-1" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
						</li>

						<li class="nav-item dropdown mt-1">
							<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">
								Parámetros
							</a>
							<ul class="dropdown-menu">
								<li class="dropdown-submenu">
									<a class="dropdown-item" asp-area="" asp-controller="Areas" asp-action="Index">
										<i class="fa fa-map-o" aria-hidden="true"></i> Areas
									</a>
								</li>
								<li class="dropdown-submenu">
									<a class="dropdown-item" asp-area="" asp-controller="SubAreas" asp-action="Index">
										<i class="fa fa-sitemap" aria-hidden="true"></i> Sub Areas
									</a>
								</li>
								<li class="dropdown-submenu">
									<a class="dropdown-item" asp-area="" asp-controller="Empleados" asp-action="Index">
										<i class="fa fa-user"></i> Empleados
									</a>
								</li>
							</ul>
							<!-- /.dropdown-admin -->
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2021 - PruebaEmpleados
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
